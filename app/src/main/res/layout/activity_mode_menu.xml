<?xml version="1.0" encoding="UTF-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <include layout="@layout/action_bar"
            android:id="@+id/mode_action_bar"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/choose_mode"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="24sp" android:id="@+id/mode_title_text_view"
            app:layout_constraintTop_toBottomOf="@+id/mode_action_bar" android:layout_marginTop="48dp"/>
    <Button
            android:text="@string/offline_button"
            android:layout_width="266dp"
            android:layout_height="63dp" android:id="@+id/button_offline"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            android:background="@drawable/btn_rounded_corner"
            android:onClick="onClick" app:layout_constraintTop_toBottomOf="@+id/mode_title_text_view"
            android:layout_marginTop="24dp"/>
    <Button
            android:text="@string/network_game_button"
            android:layout_width="266dp"
            android:layout_height="63dp"
            android:id="@+id/button_network"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            android:background="@drawable/btn_rounded_corner"
            app:layout_constraintTop_toBottomOf="@+id/button_offline"
            android:layout_marginTop="12dp"
            android:onClick="onClick"/>
</androidx.constraintlayout.widget.ConstraintLayout>