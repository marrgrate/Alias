<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/menu_title"
            android:text="@string/app_name"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.242"
            android:textSize="50sp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name_extended"
            app:layout_constraintTop_toBottomOf="@id/menu_title"
            android:layout_marginHorizontal="2dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            android:textSize="14sp"
            android:id="@+id/menu_title_ext" tools:layout_editor_absoluteY="211dp"/>
    <Button
            android:text="@string/start_button"
            android:layout_width="266dp"
            android:layout_height="63dp"
            android:id="@+id/button_start"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/btn_rounded_corner"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintTop_toBottomOf="@+id/menu_title_ext"
            android:layout_marginTop="68dp"
            android:onClick="onClick"/>
    <Button
            android:text="@string/rules_button"
            android:layout_width="266dp"
            android:layout_height="63dp"
            android:id="@+id/button_rules"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintTop_toBottomOf="@id/button_start"
            android:layout_marginTop="12dp"
            android:background="@drawable/btn_rounded_corner"
            android:onClick="onClick"/>
    <Button
            android:text="@string/exit_button"
            android:layout_width="266dp"
            android:layout_height="63dp" android:id="@+id/button_exit"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintTop_toBottomOf="@+id/button_rules"
            android:layout_marginTop="12dp"
            android:background="@drawable/btn_rounded_corner"
            android:onClick="onClick"/>
</androidx.constraintlayout.widget.ConstraintLayout>