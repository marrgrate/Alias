<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include android:id="@+id/teams_list_action_bar"
             layout="@layout/action_bar"/>
    <ListView
            android:id="@+id/team_least"
            android:layout_height="375dp"
            android:layout_width="match_parent" android:layout_above="@+id/button_add_team"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp" android:layout_below="@+id/teams_list_action_bar">
    </ListView>

    <Button
            android:text="@string/add_team"
            android:id="@+id/button_add_team"
            android:background="@drawable/btn_rounded_corner"
            android:layout_width="266dp"
            android:layout_height="63dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/button_delete_team"/>
    <Button
            android:text="@string/delete_team"
            android:id="@+id/button_delete_team"
            android:background="@drawable/btn_rounded_corner"
            android:layout_width="266dp"
            android:layout_height="63dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/button_next_teams"/>
    <Button
            android:text="@string/next_button"
            android:id="@+id/button_next_teams"
            android:background="@drawable/btn_rounded_corner"
            android:layout_width="266dp"
            android:layout_height="63dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="24dp"
            android:onClick="onClick"/>
</RelativeLayout>