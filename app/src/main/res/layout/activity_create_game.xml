<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">
    <include layout="@layout/action_bar"
             android:id="@+id/create_game_action_bar"/>
    <Button android:text="@string/create_game"
            android:id="@+id/create_game_button"
            android:background="@drawable/btn_rounded_corner"
            android:layout_width="266dp"
            android:layout_height="63dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/create_game_action_bar" android:layout_marginTop="98dp"
            android:onClick="onClick"/>
    <Button android:text="@string/join_game"
            android:id="@+id/join_game_button"
            android:background="@drawable/btn_rounded_corner"
            android:layout_width="266dp"
            android:layout_height="63dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/create_game_button" android:layout_marginTop="12dp"
            android:onClick="onClick"/>
</androidx.constraintlayout.widget.ConstraintLayout>