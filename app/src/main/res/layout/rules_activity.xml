<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/rules_title"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="36sp"
            tools:ignore="MissingConstraints" android:textStyle="bold" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toTopOf="@+id/rules_content"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:layout_width="406dp"
            android:layout_height="464dp"
            android:layout_centerHorizontal="true"
            android:text="@string/rules_content"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30dp"
            android:gravity="center"
            android:id="@+id/rules_content" tools:ignore="MissingConstraints"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="120dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"/>
    <Button android:layout_width="266dp" android:layout_height="52dp"
            android:text="@string/back_button"
            android:background="@drawable/btn_rounded_corner" tools:ignore="MissingConstraints"
            android:onClick="onCancelClicked" app:layout_constraintTop_toBottomOf="@+id/rules_content"
            android:layout_marginTop="32dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.496" app:layout_constraintVertical_bias="0.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>
