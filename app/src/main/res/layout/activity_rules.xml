<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:label="@string/rules_title">
    <include
            android:id="@+id/rules_action_bar"
            layout="@layout/action_bar" android:layout_height="55dp" android:layout_width="393dp"/>
    <TextView
            android:layout_width="338dp"
            android:layout_height="wrap_content"
            android:id="@+id/rules_content"
            android:layout_centerHorizontal="true"
            android:text="@string/rules_content"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp"

            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rules_action_bar" android:layout_marginTop="24dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
